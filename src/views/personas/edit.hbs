<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UNA PERSONA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{registros.id_r}}" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre_r" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre_r" id="nombre_r" value="{{registros.nombre_r}}" placeholder="Ejemplo: Luis Angel" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="apellido_r" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="apellido_r" id="apellido_r" placeholder="Ejemplo: Fernandez" value="{{registros.apellido_r}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="edad_r" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="edad_r" id="edad_r" value="{{registros.edad_r}}" placeholder="0" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="fecha_nacimiento_r" class="input-group-text">Fecha Nacimiento</label>
                        <input class="form-control" type="date" name="fecha_nacimiento_r" id="fecha_nacimiento_r" value="{{registros.fecha_nacimiento_r}}" placeholder="DD-MM-AAAA" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="correo_r" class="input-group-text">E-mail</label>
                        <input class="form-control" type="email" name="correo_r" id="correo_r"value="{{registros.correo_r}}" placeholder="correo@gmail.com" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_dis_r" class="input-group-text">Discapacidad:</label>
                            <select class="form-select" aria-label="Default select example" id="id_dis_r" name="id_dis_r">
                                {{#if discapacidad}}
                                    {{#each discapacidad}}
                                    <option value="{{id_dis}}">{{abrebiatura_dis}}</option>
                                    {{/each}}
                                {{/if}}
                        </select>
                    </div>
                    <script>
                        var tipop = "{{discapacidad.id_dis_r}}";
                        const select = document.getElementById
                        ('id_dis_r');
                        for (let i = 0; i < select.options.length; i++) 
                        {
                            if (select.options[i].value === tipop) 
                            {
                                select.options[i].selected = true;
                            } else 
                            {
                                select.options[i].selected = false;
                            }
                        }
                    </script>
                    <div class="input-group mt-2">
                        <label for="id_td_r" class="input-group-text">Tipo de Documento</label>
                            <select class="form-select" aria-label="Default select example" id="id_td_r" name="id_td_r">
                                {{#if tipo_documento}}
                                    {{#each tipo_documento}}
                                    <option value="{{id_td}}">{{abrebiatura_td}}</option>
                                    {{/each}}
                                {{/if}}
                        </select>
                    </div>
                    <script>
                        var tipop = "{{tipo_documento.id_td_r}}";
                        const select = document.getElementById
                        ('id_td_r');
                        for (let i = 0; i < select.options.length; i++) 
                        {
                            if (select.options[i].value === tipop) 
                            {
                                select.options[i].selected = true;
                            } else 
                            {
                                select.options[i].selected = false;
                            }
                        }
                    </script>
                    <div class="input-group mt-2">
                        <label for="documento_r" class="input-group-text">Cedula</label>
                        <input class="form-control" type="text" name="documento_r" id="documento_r" value="{{registros.documento_r}}" placeholder="Ejemplo:123456789" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_p_r" class="input-group-text">Profecion</label>
                            <select class="form-select" aria-label="Default select example" id="id_p_r" name="id_p_r">
                                {{#if profecion}}
                                    {{#each profecion}}
                                    <option value="{{id_p}}">{{descripcion}}</option>
                                    {{/each}}
                                {{/if}}
                        </select>
                    </div>
                    <script>
                        var tipop = "{{profecion.id_p_r}}";
                        const select = document.getElementById
                        ('id_p_r');
                        for (let i = 0; i < select.options.length; i++) 
                        {
                            if (select.options[i].value === tipop) 
                            {
                                select.options[i].selected = true;
                            } else 
                            {
                                select.options[i].selected = false;
                            }
                        }
                    </script>
                    <div class="input-group mt-2">
                        <label for="id_a_r" class="input-group-text">Nombre acudiente</label>
                            <select class="form-select" aria-label="Default select example" id="id_a_r" name="id_a_r">
                                {{#if acudientes}}
                                    {{#each acudientes}}
                                    <option value="{{id_a}}">{{nombre_a}}</option>
                                    {{/each}}
                                {{/if}}
                        </select>
                    </div>
                    <script>
                        var tipop = "{{acudientes.id_a_r}}";
                        const select = document.getElementById
                        ('id_a_r');
                        for (let i = 0; i < select.options.length; i++) 
                        {
                            if (select.options[i].value === tipop) 
                            {
                                select.options[i].selected = true;
                            } else 
                            {
                                select.options[i].selected = false;
                            }
                        }
                    </script>
                    <div class="input-group mt-2">
                        <label for="telefono_r" class="input-group-text">Telefono</label>
                        <input class="form-control" type="text" name="telefono_r" id="telefono_r" value="{{registros.telefono_r}}" placeholder="Ejemplo:123456789" required pattern="[3]{1}[0-9]{9}">
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>